.signup
  min-height 932px
.whitespace
  position: relative
  height 80px
.login-main
  height 640px
  background center no-repeat
  background-size cover
.login-foot
  margin 90px auto 0
  text-align center
  p
    color #333
.sign-box
  width 350px
  height 450px
  position absolute
  background-color white
  top 125px
  right 10px
  padding 30px
  .title
    font-size 24px
    font-weight bold
  .sign-form
    width 100%
    position relative
    padding 0 20px
    input
      width 100%
      height 60px
      line-height 47px
      margin-top 6px
      vertical-align top
      border-bottom 1px solid #ccc
      border-top none
      border-right none
      border-left none
      outline none
    label.code
      color #039dff
      cursor pointer
      position absolute
      right 20px
      top 90px
    label.i
      display block
      width 1px
      height 16px
      background-color #ccc
      position absolute
      right 105px
      top 90px
    .agreement
      margin-top 14px
      font-size 12px
      label.check
        width 12px
        height 12px
        vertical-align -1px
        margin-right 6px
        display inline-block
        border: solid 1px #cccccc;
        cursor pointer
      label.checked
        background-color #0394f6
.sign-in-btn
  display block
  width: 250px;
  height: 50px;
  line-height 50px;
  text-align center;
  font-size 18px;
  margin-top 45px
  color white
  background-image: linear-gradient(180deg, #77c1fa 0%, #038aeb 100%), linear-gradient(#333333, #333333);
  background-blend-mode: normal, normal;
  box-shadow: 0px 4px 5px 0px rgba(12, 142, 236, 0.48);
