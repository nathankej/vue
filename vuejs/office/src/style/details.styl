.full-width.details-banner{
  height: 600px;
  background: center no-repeat;
  background-size: cover;
  margin-top: 1px;
}
.full-width.details-banner .container{
  height: 600px;
}
.info{
  position: absolute;
  width: 460px;
  height: 340px;
  background-color: white;
  margin-top:127px;
  border-radius: 6px;
  padding: 47px 50px;
}
.info-title{
  font-size: 30px;
  color: black;
  font-weight: bold;
  margin-bottom:27px ;
  overflow: hidden;
  text-overflow-ellipsis: ellipsis;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.info-co{
  font-size: 16px;
  line-height: 24px;
  margin-bottom:27px ;
  color: #333;
}
.info-n{
  color: #333;
  margin-bottom: 43px;
}
a.btn{
  width: 120px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  display: block;
  border-radius: 6px;
  border: solid 1px #038aeb;
  color: white;
  background-color: #038aeb;
}
a.btn:hover,a.btn.active{
  color: white;
  background-color: #039dff;
  transition: 0.3s;
}
.container.crumbs{
  margin-top: 50px;
}
.full-width.tab{
  margin-top: 48px;
  height: 40px;
  border-bottom: #ccc 1px solid;
}
.detail .row{
  margin: 0 auto;
  position: relative;
}
.row-item{
  float: left;
  height: 40px;
  width: 20%;
  text-align: center;
  font-size: 18px;
}
.row-item a{
  min-width: 80px;
  padding: 0 4px 20px;
  height: 40px;
  display: block;
  font-weight: bold;
}
.row-item a:hover{
  color: #038aeb;
  border-bottom: 3px solid #038aeb;
}

.row-item a.active{
  color: #038aeb;
  border-bottom: 3px solid #038aeb;
}

