.full-width.intro_banner
  height: 600px;
  background: center no-repeat;
  background-size: cover;
  margin-top: 1px;
.container.crumbs
  margin-top: 50px;
.container.company-introduce h1
  font-size: 30px;
  font-weight bold;
  margin-top 45px
.container.company-introduce h1:before
  display: inline-block;
  width: 2px;
  background-color: #0394f6;
  height: 30px;
  content: '';
  transform: translateY(5px);
  margin-right: 12px;
.row.introduce-main
  padding 80px 0 150px
.container.service-introduce
  h1
    font-size: 30px;
    font-weight bold;
    margin-top 45px
    &:before
      display: inline-block;
      width: 2px;
      background-color: #0394f6;
      height: 30px;
      content: '';
      transform: translateY(5px);
      margin-right: 12px;
  .row
    padding 80px 0 150px
  &:after
    display block
    content ''
    clear both
.span
  font-size: 18px;
  font-weight: normal;
  margin-left: 10px;
  font-family: 'aldo';
  color: #888;
