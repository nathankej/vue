a.active{
  color #038aeb
}
.login
  min-height 932px
.whitespace
  position: relative
  height 80px
.login-main
  height 640px
  background center no-repeat
  background-size cover
  .input-box
    position absolute
    width 350px
    height 450px
    background-color white
    top:125px
    right:10px
    padding 30px
    .input-title
      text-indent 20px
      font-size 24px
      font-weight bold
    .input-main
      position relative
      margin  40px 20px
      width 250px
      height 284px
      .input-tab
        width 100%
        &:after
          clear both
          content ''
          display block
        a
          width 50%
          display inline-block
          float left
          text-align center
      .input-form
        position relative
        margin-top 35px
        width 100%
        label.i
          width 1px
          height 16px
          right 86px
          background-color #ccc
        label
          position: absolute
          right 0
          bottom 15px
          color #038aeb
          cursor pointer
          &:before
            display: block
            width 1px
            height 15px
            background-color #cccccc
        input
          width 100%
          height 47px
          line-height 47px
          vertical-align top
          border-bottom 1px solid #ccc
          border-top none
          border-right none
          border-left none
          outline none
        input.password
          margin-top 15px
      .sign-in
        margin-top 10px
        margin-bottom 46px
        &:after
          clear both
          content ''
          display block
        .join
          font-size 12px
          float left
        .forget
          font-size 12px
          float right
      .sign-in-btn {
        display block
        width: 250px;
        height: 50px;
        line-height 50px;
        text-align center;
        font-size 18px;
        color white
        background-image: linear-gradient(180deg, #77c1fa 0%, #038aeb 100%), linear-gradient(#333333, #333333);
        background-blend-mode: normal, normal;
        box-shadow: 0px 4px 5px 0px rgba(12, 142, 236, 0.48);
      }

.login-foot
  margin 90px auto 0
  text-align center
  p
    color #333
