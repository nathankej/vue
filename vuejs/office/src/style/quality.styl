.quality-banner
  height: 600px;
  background: center no-repeat;
  background-size: cover;
  margin-top: 1px;
.full-width.crumbs
  background-color #f2f2f2
  color black
  .container.crumbs
    padding-top 50px
  .container.our-advantages
    padding-top 40px
    h1
      font-size 30px
      font-weight bold
      &:before
        display: inline-block
        content ''
        width 2px
        height 28px
        margin-right 20px
        background-color #038aeb
        transform translateY(5px)
      span
        font-size 18px
        font-weight normal
        margin-left 10px
        font-family 'aldo'
        color #888888
  .container.advantages
    img.img
      margin-top 35px
      margin-bottom 100px
    h2.a1
      font-family: 'ice';
      font-size: 30px;
      font-weight: normal;
      font-stretch: normal;
      letter-spacing: 0px;
      color: #e9e9e9;
      text-align center
      margin-top 80px
    h2.a2
      font-family: MicrosoftYaHei;
      font-size: 28px;
      font-weight: normal;
      font-stretch: normal;
      letter-spacing: 0px;
      color: #333333;
      text-align center
    div.advantage
      width 100%
      margin-top 100px
      padding-bottom 95px
      &:after
        display block
        content ''
        clear both
      .item
        width 280px
        height 359px
        margin-right 20px
        background-color white
        text-align center
        float left
        box-shadow: 0px 8px 8px 0px rgba(86, 84, 85, 0.35);
        h3
          font-size 24px
          margin-top 45px
        img
          margin-top 30px
        p
          margin 35px auto
          width 199px
        &.green
          border-top 5px solid #5ac704
          &:hover
            transition 0
            border-top 5px solid #5ac704
            border-right  2px solid #5ac704
            border-left  2px solid #5ac704
            border-bottom  2px solid #5ac704
        &.pink
          border-top 5px solid #ff6484
          &:hover
            transition 0
            border-top 5px solid #ff6484
            border-right  2px solid #ff6484
            border-left  2px solid #ff6484
            border-bottom  2px solid #ff6484
        &.blue
          border-top 5px solid #038aeb
          &:hover
            transition 0
            border-top 5px solid #038aeb
            border-right  2px solid #038aeb
            border-left  2px solid #038aeb
            border-bottom  2px solid #038aeb
        &.orange
          border-top 5px solid #fea130
          &:hover
            transition 0
            border-top 5px solid #fea130
            border-right  2px solid #fea130
            border-left  2px solid #fea130
            border-bottom  2px solid #fea130
        &:last-child
          margin-right 0
