div.h2_{
  display: block;
  width: 60px;
  height: 2px;
  background-color: #038aeb;
  margin: 20px auto 0;
}
#index{
  position: relative;
}
/*导航菜单*/
.sideNav{
  position: relative;
  width: 280px;
  z-index: 2;
}
.sideNavItem{
  position: relative;
  background-color: white;
  width: 280px;
  height: 60px;
  font-size: 16px;
  box-sizing: border-box;
  padding: 22px 30px;
}
.sideNavItem:last-child{
  border-bottom: 1px solid #cccccc;
}
.sideNavItem:last-child:hover{
  border-bottom: 1px solid #038aeb;
  border-right: 1px solid #038aeb;
}
.sideNavItem:hover{
  cursor: pointer;
}
.sideNavItem:hover .ti{
  z-index: 3;
  border-right: 1px solid white;
  border-left: 1px solid #038aeb;
  border-top: 1px solid #038aeb;
}
.sideNavItem:hover+.sideNavItem>.ti{
  border-top:1px solid #038aeb;
}
.tcenter{
  width: 280px;
  height: 60px;
  font-size: 16px;
  text-align: center;
  background-color: #038aeb;
  border: 1px solid #038aeb;
  box-sizing: border-box;
}
.sideNavItem .ti{
  width: 100%;
  border: 1px solid #ccc;
  border-bottom: none;
  position: absolute;
  height: 60px;
  padding: 22px 30px;
  top: 0;
  left: 0;
}
.sideNavItem:hover .ti>span{
  color: #038aeb;
}
.tcenter p{
  margin: 0;
  border-right: #cccccc;
  line-height: 60px;
  color: white;
}
.sideNavItem .menu{
  width: 470px;
  padding: 19px 48px 0 48px;
  position: absolute;
  background-color: white;
  top: 0;
  left: 279px;
  border: 1px solid #038aeb;
  z-index: 2;
  display: none;
}
.sideNavItem:hover .menu{
  display: block;
}
.menu .menu-item{
  float: left;
  font-size: 15px;
  width: 25%;
  margin-bottom: 20px;
}
.menu .menu-item.active{
  color: #038aeb;
}
.menu .menu-item.active:hover:before{
  background-color: #038aeb;
  color: #038aeb;
}
.menu .menu-item:hover a{
  color: #038aeb;
}
.menu .menu-item:before{
  display: inline-block;
  content: '';
  width: 2px;
  height: 12px;
  background-color: #cccccc;
  margin-right: 10px;
  vertical-align: middle;
  transform: translateY(-2px);
}
img.nav-icon{
  margin-right: 22px;
  width: 20px;
  transform: translateY(-2px);
}
img.icon-more{
  float: right;
  transform: translateY(5px);
}

/*轮播图插件*/
#app .bannerList{
  position: absolute;
  top: 0;
  width: 100%;
  height: 600px;
  z-index: 0;
  margin-top: 1px;
}
.bannerList .banner{
  position: absolute;
  width: 100%;
  min-width: 1200px;
  height: 599px;
  background: center no-repeat;
  background-size: cover;
  display: block;
  text-align: center;
}
.banner img{
  width: 100%;
}
.centerBar{
  padding: 10px;
  border-bottom: 1px solid #ccc;
  overflow-x: hidden;
}
.centerBar .centerBarItem{
  height: 100px;
  line-height: 100px;
  font-size: 16px;
  padding: 0 30px;
}
.centerBar .centerBarItem:hover{
  color: #038aeb;
  cursor: pointer;
}
.centerBar .centerBarItem:after{
  display: inline-block;
  content: '';
  border-right: 1px solid #ccc;
  height: 60px;
  vertical-align: middle;
  transform: translateX(35px);
}
.centerBar .centerBarItem:last-child:after{
  display: none;
}
.fade-enter-active, .fade-leave-active {
  transition: opacity .5s;
}
.fade-enter, .fade-leave-to{
  opacity: 0;
}
.banner-click{
  width: 200px;
  z-index: 999;
  position: absolute;
  left: 49%;
  bottom: 20px;
}
.bannerClick{
  cursor: pointer;
  width: 16px;
  height: 16px;
  border-radius 50%
  background-color: #f2f2f2;
  display: inline-block;
  z-index: 999;
  margin-left: 10px;
  opacity: 0.8;
}
.bannerClick.bannerActive{
  background-color: #038aeb;
}

